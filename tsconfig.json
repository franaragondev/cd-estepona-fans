{
  "compilerOptions": {
    "target": "ES2022",              
    "lib": ["DOM", "DOM.Iterable", "ESNext"], 
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,                     
    "esModuleInterop": true,
    "module": "ESNext",                 
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [{ "name": "next" }],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "next-sitemap.config.js"
  ],
  "exclude": ["node_modules"]
}